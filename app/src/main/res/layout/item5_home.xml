<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_zhuanti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="专题精选"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_gengduo_item5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:drawableRight="@drawable/u82"
        android:drawablePadding="20dp"
        android:text="更多推荐"
        android:textColor="#bbbbbb"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_zhuanti"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_zhuanti" />

    <ImageView
        android:id="@+id/iv_img_item5_home"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:background="#bbbbbb"
        android:src="@mipmap/u88"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_zhuanti" />

    <TextView
        android:id="@+id/tv_name_item5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxWidth="140dp"
        android:singleLine="true"
        android:text="我命由我不由天"
        android:textColor="#000000"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_img_item5_home" />

    <TextView
        android:id="@+id/tv_jiage_item5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥1999元起"
        android:textColor="#FC0017"
        android:textSize="15dp"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_name_item5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_name_item5" />

    <TextView
        android:id="@+id/tv_jieshao_item5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxWidth="120dp"
        android:singleLine="true"
        android:text="我命由我不由天"
        android:textColor="#bbbbbb"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_name_item5" />


    <View
        android:id="@+id/v_rlv"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_v"
        app:layout_constraintTop_toBottomOf="@id/tv_jieshao_item5" />
</androidx.constraintlayout.widget.ConstraintLayout>