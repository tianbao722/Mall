<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/u76" />

    <TextView
        android:id="@+id/tv_title_guangao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="广告标题"
        app:layout_constraintLeft_toRightOf="@id/img_3"
        app:layout_constraintTop_toTopOf="@id/img_3"
        app:layout_constraintBottom_toBottomOf="@id/img_3"
        android:layout_marginLeft="30dp"
        android:textColor="#646464"
        android:textSize="12dp" />
    <TextView
        android:id="@+id/tv_xiangqing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textColor="#2AB795"
        android:text="详情"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="15dp"
        android:layout_marginRight="5dp"
        android:paddingRight="15dp"
        android:background="@drawable/shape_xiangqing"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>