<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl1_my"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_180"
        android:background="#3F4552"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_marginLeft="50dp"
            android:src="@mipmap/u208"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_name_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="10dp"
            android:text="Winder"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_15"
            app:layout_constraintLeft_toRightOf="@id/iv_head"
            app:layout_constraintTop_toTopOf="@id/iv_head" />

        <TextView
            android:id="@+id/tv_huiyuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/shape_my_huiyuan"
            android:paddingLeft="@dimen/dp_7"
            android:paddingTop="@dimen/dp_3"
            android:paddingRight="@dimen/dp_7"
            android:paddingBottom="@dimen/dp_3"
            android:text="黄金会员"
            android:textColor="#ffffff"
            app:layout_constraintLeft_toRightOf="@id/iv_head"
            app:layout_constraintTop_toBottomOf="@id/tv_name_my" />

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@mipmap/u211"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/ll_my"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl1_my">

        <LinearLayout
            android:id="@+id/ll_jifen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="积分"
                android:textColor="#666666"
                android:textSize="@dimen/dp_15" />

            <TextView
                android:id="@+id/tv_jifen_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textColor="#2AB795"
                android:textSize="@dimen/dp_15" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_youhuiquan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="优惠券"
                android:textColor="#666666"
                android:textSize="@dimen/dp_15" />

            <TextView
                android:id="@+id/tv_youhuiquan_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textColor="#2AB795"
                android:textSize="@dimen/dp_15" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_guanzhu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注"
                android:textColor="#666666"
                android:textSize="@dimen/dp_15" />

            <TextView
                android:id="@+id/tv_guanzhu_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textColor="#2AB795"
                android:textSize="@dimen/dp_15" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/v_rlv"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_v"
        app:layout_constraintTop_toBottomOf="@id/ll_my" />

    <LinearLayout
        android:id="@+id/ll_daohang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_rlv">

        <LinearLayout
            android:id="@+id/ll_dingdan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@mipmap/u227" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的订单"
                android:textColor="#666666"
                android:textSize="@dimen/dp_15" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_daifukuan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@mipmap/daifukuan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待付款"
                android:textColor="#666666"
                android:textSize="@dimen/dp_15" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_daishouhuo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@mipmap/daishouhuo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待收货"
                android:textColor="#666666"
                android:textSize="@dimen/dp_15" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_daipingjia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@mipmap/u252" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待评价"
                android:textColor="#666666"
                android:textSize="@dimen/dp_15" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_shouhou"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@mipmap/u256" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="售后服务"
                android:textColor="#666666"
                android:textSize="@dimen/dp_15" />
        </LinearLayout>


    </LinearLayout>

    <View
        android:id="@+id/v_my"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="@dimen/dp_5"
        android:background="#bbbbbb"
        app:layout_constraintTop_toBottomOf="@id/ll_daohang" />


</androidx.constraintlayout.widget.ConstraintLayout>